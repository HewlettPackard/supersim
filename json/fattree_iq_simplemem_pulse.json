{
  "simulator": {
    "channel_cycle_time": 1,
    "router_cycle_time": 1,
    "interface_cycle_time": 1,
    "print_progress": true,
    "print_interval": 1.0,  // seconds
    "random_seed": 12345678,
    "info_log": {
      "file": null  // "info.csv"
    }
  },
  "network": {
    "topology": "fat_tree",
    "down_up": [[3, 3], [3, 3], [3]],
    "protocol_classes": [
      {
        "num_vcs": 2,
        "routing": {
          "algorithm": "common_ancestor",
          "latency": 1,  // cycles
          "least_common_ancestor": false,
          "mode": "port_ave",
          "deterministic": true,
          "reduction": {
            "algorithm": "all_minimal",
            "max_outputs": 0
          }
        }
      },
      {
        "num_vcs": 2,
        "routing": {
          "algorithm": "common_ancestor",
          "latency": 1,  // cycles
          "least_common_ancestor": true,
          "mode": "port_max",
          "deterministic": false,
          "reduction": {
            "algorithm": "least_congested_minimal",
            "max_outputs": 2
          }
        }
      }
    ],
    "internal_channels": [
      {
        "latency": 3  // cycles
      },
      {
        "latency": 2  // cycles
      }
    ],
    "external_channel": {
      "latency": 1  // cycles
    },
    "channel_log": {
      "file": null  // "channels.csv"
    },
    "traffic_log": {
      "file": null  // "traffic.csv"
    },
    "router": {
      "architecture": "input_queued",
      "congestion_sensor": {
        "algorithm": "buffer_occupancy",
        "latency": 1,
        "granularity": 0,
        "minimum": 0.0,
        "offset": 0.0,
        "mode": "normalized_vc", //(normalized_port/vc absolute_port/vc)
        "phantom": true,
        "value_coeff": 1.23,
        "length_coeff": 2.5
      },
      "congestion_mode": "downstream",
      "input_queue_mode": "fixed",  // fixed or tailored
      "input_queue_depth": 16,
      "vca_swa_wait": false,
      "output_queue_depth": 64,
      "crossbar": {
        "latency": 1  // cycles
      },
      "vc_scheduler": {
        "allocator": {
          "type": "rc_separable",
          "slip_latch": true,
          "iterations": 1,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          },
          "client_arbiter": {
            "type": "lslp"
          }
        }
      },
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "dual_stage_class",
            "classes": 2,
            "class_map": [0, 0, 1],  // maps to the TCs of the 3 VCs
            "metadata_func": "none",  // "none", "min", or "max"
            "stage1_arbiter": {
              "type": "lslp"
            },
            "stage2_arbiter": {
              "type": "comparing",
              "greater": false
            }
          }
        },
        "full_packet": false,
        "packet_lock": true,
        "idle_unlock": true
      }
    },
    "interface": {
      "type": "standard",
      "adaptive": false,
      "fixed_msg_vc": false,
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        },
        "full_packet": false,
        "packet_lock": true,
        "idle_unlock": true
      },
      "init_credits_mode": "$&(network.router.input_queue_mode)&$",
      "init_credits": "$&(network.router.input_queue_depth)&$",
      "crossbar": {
        "latency": 1  // cycles
      }
    }
  },
  "metadata_handler": {
    "type": "creation_timestamp",
    "delay": 10000,
    "algorithm": "transaction"
  },
  "workload": {
    "message_log": {
      "file": null  // "data.mpf.gz"
    },
    "applications": [
      {
        "type": "simple_mem",
        "memory_slice": 4096,
        "block_size": 64,  // bytes
        "bytes_per_flit": 4,
        "header_overhead": 16,  // bytes
        "max_packet_size": 16,  // flits
        "processor_terminal": {
          "protocol_class": 0,
          "latency": 10,
          "memory_accesses": 500
        },
        "memory_terminal": {
          "protocol_class": 0,
          "latency": 15
        },
        "rate_log": {
          "file": null  // "rates.csv"
        }
      },
      {
        "type": "pulse",
        "pulse_terminal": {
          // requests
          "request_protocol_class": 1,
          "request_injection_rate": 0.25,
          // responses
          "enable_responses": false,
          // traffic generation
          "delay": 1000,
          "num_transactions": 500,
          "max_packet_size": 16,
          "traffic_pattern": {
            "type": "random_exchange"
          },
          "message_size_distribution": {
            "type": "single",
            "message_size": 16
          }
        },
        "rate_log": {
          "file": null  // "rates.csv"
        }
      }
    ]
  },
  "debug": []
}
