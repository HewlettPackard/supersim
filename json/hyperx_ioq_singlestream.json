{
  "simulator": {
    "cycle_time": 1,  // nanoseconds
    "print_progress": true,
    "print_interval": 1.0,  // seconds
    "random_seed": 12345678
  },
  "network": {
    "topology": "hyperx",
    "num_vcs": 4,
    "dimension_widths": [4],
    "dimension_weights": [3],
    "concentration": 3,
    "internal_channel": {
      "latency": 5  // cycles
    },
    "external_channel": {
      "latency": 5  // cycles
    },
    "channel_log": {
      "file": "/dev/null"  // "channels.csv"
    },
    "routing": {
      "algorithm": "dimension_order",
      "latency": 1
    },
    "interface": {
      "type": "standard",
      "fixed_msg_vc": false,
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        },
        "packet_lock": true,
        "idle_unlock": true
      },
      "init_credits": 12,
      "crossbar": {
        "latency": 1  // cycles
      }
    },
    "router": {
      "architecture": "input_output_queued",
      "congestion_status": {
        "latency": 1
      },
      "input_queue_depth": 12,
      "vca_swa_wait": true,
      "output_queue_depth": 2,
      "crossbar": {
        "latency": 1  // cycles
      },
      "vc_scheduler": {
        "allocator": {
          "type": "rc_separable",
          "slip_latch": true,
          "iterations": 1,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          },
          "client_arbiter": {
            "type": "lslp"
          }
        }
      },
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        },
        "packet_lock": true,
        "idle_unlock": true
      },
      "output_crossbar": {
        "latency": 1  // cycles
      },
      "output_crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        },
        "packet_lock": true,
        "idle_unlock": true
      }
    }
  },
  "application": {
    "type": "single_stream",
    "max_injection_rate": 1.0,
    "terminal": {
      "num_messages": 100,
      "min_message_size": 3000,
      "max_message_size": 3000,
      "max_packet_size": 3000
    },
    "message_log": {
      "file": "/dev/null"  // "data.mpf.gz"
    },
    "rate_log": {
      "file": "/dev/null"  // "rates.csv"
    },
    "source_terminal": 0,  // < 0 is random
    "destination_terminal": 11  // < 0 is random
  },
  "metadata_handler": {
    "type": "zero"
  },
  "debug": []
}
