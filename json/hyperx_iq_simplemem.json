{
  "simulator": {
    "cycle_time": 1,  // nanoseconds
    "print_progress": true,
    "print_interval": 1.0,  // seconds
    "random_seed": 12345678
  },
  "network": {
    "topology": "hyperx",
    "num_vcs": 8,
    "dimension_widths": [3, 4, 5],
    "dimension_weights": [2, 1, 1],
    "concentration": 3,
    "internal_channel": {
      "latency": 1  // cycles
    },
    "external_channel": {
      "latency": 1  // cycles
    },
    "channel_log": {
      "file": "/dev/null"  // "channels.csv"
    },
    "routing": {
      "algorithm": "dimension_order",
      "latency": 1
    },
    "interface": {
      "type": "standard",
      "fixed_msg_vc": false,
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "lslp"
          }
        }
      },
      "init_credits": 16,
      "crossbar": {
        "latency": 1  // cycles
      }
    },
    "router": {
      "architecture": "input_queued",
      "congestion_status": {
        "latency": 1
      },
      "input_queue_depth": 16,
      "crossbar": {
        "latency": 1  // cycles
      },
      "vc_scheduler": {
        "allocator": {
          "type": "rc_separable",
          "slip_latch": true,
          "iterations": 3,
          "resource_arbiter": {
            "type": "lslp"
          },
          "client_arbiter": {
            "type": "lslp"
          }
        }
      },
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "lslp"
          }
        }
      }
    }
  },
  "application": {
    "type": "simple_mem",
    "max_injection_rate": -1,  // infinite injection rate
    "memory_slice": 4096,
    "block_size": 64,  // bytes
    "bytes_per_flit": 4,
    "header_overhead": 16,  // bytes
    "max_packet_size": 16,  // flits
    "processor_terminal": {
      "latency": 10,
      "memory_accesses": 10
    },
    "memory_terminal": {
      "latency": 15
    },
    "message_log": {
      "file": "/dev/null"  // "data.mpf.gz"
    },
    "rate_log": {
      "file": "/dev/null"  // "rates.csv"
    }
  },
  "metadata_handler": {
    "type": "zero"
  },
  "debug": []
}
