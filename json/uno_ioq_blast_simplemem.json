{
  "simulator": {
    "channel_cycle_time": 3,
    "core_cycle_time": 2,
    "print_progress": true,
    "print_interval": 1.0,  // seconds
    "random_seed": 12345678
  },
  "network": {
    "topology": "uno",
    "concentration": 16,
    "traffic_classes": [
      {
        "num_vcs": 2,
        "routing": {
          "algorithm": "direct",
          "latency": 1,
          "adaptive": true
        }
      },
      {
        "num_vcs": 2,
        "routing": {
          "algorithm": "direct",
          "latency": 1,
          "adaptive": true
        }
      }
    ],
    "external_channel": {
      "latency": 2
    },
    "channel_log": {
      "file": "/dev/null"  // "channels.csv"
    },
    "router": {
      "architecture": "input_output_queued",
      "congestion_status": {
        "algorithm": "buffer_occupancy",
        "latency": 1,
        "granularity": 0,
        "mode": "vc"
      },
      "input_queue_depth": 8,
      "vca_swa_wait": false,
      "output_queue_depth": 20,
      "crossbar": {
        "latency": 1  // cycles
      },
      "vc_scheduler": {
        "allocator": {
          "type": "rc_separable",
          "slip_latch": true,
          "iterations": 1,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          },
          "client_arbiter": {
            "type": "lslp"
          }
        }
      },
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        },
        "full_packet": false,
        "packet_lock": true,
        "idle_unlock": true
      },
      "output_crossbar": {
        "latency": 1  // cycles
      },
      "output_crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        },
        "full_packet": false,
        "packet_lock": true,
        "idle_unlock": true
      }
    },
    "interface": {
      "type": "standard",
      "adaptive": true,
      "fixed_msg_vc": false,
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        },
        "full_packet": false,
        "packet_lock": true,
        "idle_unlock": true
      },
      "init_credits": "$&(network.router.input_queue_depth)&$",
      "crossbar": {
        "latency": 1  // cycles
      }
    }
  },
  "metadata_handler": {
    "type": "zero"
  },
  "workload": {
    "message_log": {
      "file": "/dev/null"  // "data.mpf.gz"
    },
    "applications": [
      {
        "type": "blast",
        "warmup_threshold": 0.90,
        "kill_on_saturation": false,
        "log_during_saturation": false,
        "blast_terminal": {
          // requests
          "request_traffic_class": 0,
          "request_injection_rate": 0.45,
          // responses
          "enable_responses": true,
          "request_processing_latency": 200,
          "max_outstanding_transactions": 1,
          "response_traffic_class": 1,
          // warmup
          "warmup_interval": 200,  // delivered flits
          "warmup_window": 15,
          "warmup_attempts": 20,
          // traffic generation
          "num_transactions": 0,
          "max_packet_size": 16,
          "traffic_pattern": {
            "type": "uniform_random",
            "send_to_self": false
          },
          "message_size_distribution": {
            "type": "probability",
            "message_sizes": [1, 8, 16, 32, 64],
            "size_probabilities": [50, 25, 12.5, 6.25, 6.25]
          }
        },
        "rate_log": {
          "file": "/dev/null"  // "rates.csv"
        }
      },
      {
        "type": "simple_mem",
        "memory_slice": 4096,
        "block_size": 64,  // bytes
        "bytes_per_flit": 4,
        "header_overhead": 16,  // bytes
        "max_packet_size": 16,  // flits
        "processor_terminal": {
          "traffic_class": 0,
          "latency": 3,
          "memory_accesses": 700
        },
        "memory_terminal": {
          "traffic_class": 1,
          "latency": 5
        },
        "rate_log": {
          "file": "/dev/null"  // "rates.csv"
        }
       }
    ]
  },
  "debug": [
    "Workload",
    "Workload.Application_0",
    "Workload.Application_1"
  ]
}
