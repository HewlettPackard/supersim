{
  "simulator": {
    "cycle_time": 1,  // nanoseconds
    "print_progress": true,
    "print_interval": 1.0,  // seconds
    "random_seed": 12345678
  },
  "network": {
    "topology": "slimfly",
    "num_vcs": 16,
    "width": 5,
    "concentration": 2,
    "internal_channel": {
      "latency": 1  // cycles
    },
    "external_channel": {
     "latency": 1  // cycles
    },
    "channel_log": {
      "file": "/dev/null"  // "channels.csv"
    },
    "routing": {
      "algorithm": "minimal",
      "implementation": "algorithm",
      "adaptive": true,
      "latency": 1
    },
    "interface": {
      "type": "standard",
      "fixed_msg_vc": false,
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        },
        "packet_lock": true,
        "idle_unlock": true
      },
      "output_crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        },
        "packet_lock": true,
        "idle_unlock": true
      },
      "init_credits": 160,
      "crossbar": {
        "latency": 1  // cycles
      },
      "output_crossbar": {
        "latency": 1  // cycles
      }
    },
    "router": {
      "architecture": "input_output_queued",
      "congestion_status": {
        "latency": 1
      },
      "input_queue_depth": 32,
      "output_queue_depth": 32,
      "vca_swa_wait": true,
      "crossbar": {
        "latency": 1  // cycles
      },
      "output_crossbar": {
        "latency": 1  // cycles
      },
      "vc_scheduler": {
        "allocator": {
          "type": "rc_separable",
          "slip_latch": false,
          "iterations": 1,
          "resource_arbiter": {
            "type": "comparing",  // lslp
            "greater": false
          },
          "client_arbiter": {
            "type": "comparing",
	          "greater": false
          }
        }
      },
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": false,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        },
        "packet_lock": true,
        "idle_unlock": true
      },
      "output_crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": false,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        },
        "packet_lock": true,
        "idle_unlock": true
      }
    }
  },
  "application": {
    "type": "stress_test",
    "max_injection_rate": 0.90,
    "warmup_threshold": 0.99,
    "blast_terminal": {
      "num_messages": 1000,
      "min_message_size": 1,
      "max_message_size": 1,
      "max_packet_size": 1,
      "warmup_interval": 200,  // delivered flits
      "warmup_window": 15,
      "warmup_attempts": 50,
      "traffic_pattern": {
        "type": "uniform_random",
        "send_to_self": false
      }
    },
    "message_log": {
      "file": "/dev/null"  // "data.mpf.gz"
    },
    "rate_log": {
      "file": "/dev/null"  // "rates.csv"
    }
  },
  "metadata_handler": {
    "type": "deadline",
    "algorithm": "message",
    "delay" : 100
  }
}
