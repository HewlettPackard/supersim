{
  "simulator": {
    "cycle_time": 1000,  // picoseconds
    "print_progress": true,
    "print_interval": 1.0,  // seconds
    "random_seed": 12345678
  },
  "network": {
    "topology": "hyperx",
    "num_vcs": 2,
    "dimension_widths": [2, 2, 2],
    "dimension_weights": [1, 1, 1],
    "concentration": 4,
    "internal_channel": {
      "latency": 5  // cycles
    },
    "external_channel": {
      "latency": 5  // cycles
    },
    "channel_log": {
      "file": "/dev/null"  // "channels.csv"
    },
    "interface": {
      "type": "standard",
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        }
      },
      "init_credits": 1000,
      "crossbar": {
        "latency": 1  // cycles
      }
    },
    "router": {
      "architecture": "input_queued",
      "routing": {
        "algorithm": "dimension_ordered",
        "latency": 1,  // cycles
        "all_vcs": true
      },
      "input_queue_depth": 1000,
      "crossbar": {
        "latency": 1  // cycles
      },
      "vc_scheduler": {
        "allocator": {
          "type": "rc_separable",
          "slip_latch": true,
          "iterations": 2,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          },
          "client_arbiter": {
            "type": "lslp"
          }
        }
      },
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        }
      }
    }
  },
  "application": {
    "type": "single_stream",
    "max_injection_rate": 1.0,
    "terminal": {
      "num_messages": 20000,
      "min_message_size": 1,
      "max_message_size": 64,
      "max_packet_size": 16
    },
    "message_log": {
      "file": "/dev/null"  // "data.mpf.gz"
    },
    "rate_log": {
      "file": "/dev/null"  // "rates.csv"
    },
    "source_terminal": 0,  // < 0 is random
    "destination_terminal": 7  // < 0 is random
  },
  "metadata_handler": {
    "type": "zero"
  },
  "debug": []
}
