{
  "simulator": {
    "cycle_time": 1,  // nanoseconds
    "print_progress": true,
    "print_interval": 1.0,  // seconds
    "random_seed": 12345678
  },
  "network": {
    "topology": "uno",
    "num_vcs": 2,
    "concentration": 16,
    "external_channel": {
      "latency": 1  // cycles
    },
    "channel_log": {
      "file": "/dev/null"  // "channels.csv"
    },
    "routing": {
      "algorithm": "direct",
      "latency": 1
    },
    "interface": {
      "type": "standard",
      "fixed_msg_vc": false,
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        },
        "full_packet": false,
        "packet_lock": false,
        "idle_unlock": false
      },
      "init_credits": 16,
      "crossbar": {
        "latency": 1  // cycles
      }
    },
    "router": {
      "architecture": "input_queued",
      "congestion_status": {
        "algorithm": "buffer_occupancy",
        "latency": 1,
        "granularity": 0
      },
      "input_queue_depth": 16,
      "vca_swa_wait": false,
      "crossbar": {
        "latency": 1  // cycles
      },
      "vc_scheduler": {
        "allocator": {
          "type": "rc_separable",
          "slip_latch": true,
          "iterations": 2,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          },
          "client_arbiter": {
            "type": "lslp"
          }
        }
      },
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        },
        "full_packet": false,
        "packet_lock": false,
        "idle_unlock": false
      }
    }
  },
  "application": {
    "type": "stress_test",
    "max_injection_rate": 0.5,
    "warmup_threshold": 0.99,
    "kill_fast": false,
    "blast_terminal": {
      "num_messages": 3000,
      "min_message_size": 1,
      "max_message_size": 64,
      "max_packet_size": 16,
      "warmup_interval": 200,  // delivered flits
      "warmup_window": 15,
      "warmup_attempts": 20,
      "traffic_pattern": {
        "type": "matrix",
        "file": "json/trafficmatrix.csv.gz"
      }
    },
    "message_log": {
      "file": "/dev/null"  // "data.mpf.gz"
    },
    "rate_log": {
      "file": "/dev/null"  // "rates.csv"
    }
  },
  "metadata_handler": {
    "type": "local_timestamp"
  },
  "debug": []
}
