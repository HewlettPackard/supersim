{
  "simulator": {
    "cycle_time": 1,  // nanoseconds
    "print_progress": true,
    "print_interval": 1.0,  // seconds
    "random_seed": 12345678
  },
  "network": {
    "topology": "uno",
    "num_vcs": 2,
    "concentration": 64,
    "external_channel": {
      "latency": 1
    },
    "channel_log": {
      "file": "/dev/null"  // "channels.csv"
    },
    "interface": {
      "type": "standard",
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        }
      },
      "init_credits": 16,
      "crossbar": {
        "latency": 1  // cycles
      }
    },
    "router": {
      "architecture": "input_output_queued",
      "routing": {
        "algorithm": "direct",
        "latency": 1,  // cycles
        "all_vcs": true
      },
      "input_queue_depth": 16,
      "output_queue_depth": 16,
      "crossbar": {
        "latency": 1  // cycles
      },
      "vc_scheduler": {
        "allocator": {
          "type": "rc_separable",
          "slip_latch": true,
          "iterations": 1,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          },
          "client_arbiter": {
            "type": "lslp"
          }
        }
      },
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        }
      },
      "output_crossbar": {
        "latency": 1  // cycles
      },
      "output_crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        }
      }
    }
  },
  "application": {
    "type": "stress_test",
    "max_injection_rate": 0.5,
    "warmup_threshold": 0.99,
    "blast_terminal": {
      "num_messages": 300,
      "min_message_size": 1,
      "max_message_size": 64,
      "max_packet_size": 16,
      "warmup_interval": 200,  // delivered flits
      "warmup_window": 15,
      "warmup_attempts": 20,
      "traffic_pattern": {
        "type": "uniform_random"
      }
    },
    "message_log": {
      "file": "/dev/null"  // "data.mpf.gz"
    },
    "rate_log": {
      "file": "/dev/null"  // "rates.csv"
    }
  },
  "metadata_handler": {
    "type": "zero"
  },
  "debug": []
}
