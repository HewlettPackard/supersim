{
  "simulator": {
    "channel_cycle_time": 1,
    "core_cycle_time": 1,
    "print_progress": true,
    "print_interval": 1.0,  // seconds
    "random_seed": 12345678
  },
  "network": {
    "topology": "hyperx",
    "dimension_widths": [3, 4, 5],
    "dimension_weights": [2, 2, 1],
    "concentration": 3,
    "traffic_classes": [
      {
        "num_vcs": 3,
        "routing": {
          "algorithm": "dimension_order",
          "latency": 1
        }
      },
      {
        "num_vcs": 3,
        "routing": {
          "algorithm": "dimension_order",
          "latency": 1
        }
      }
    ],
    "internal_channel": {
      "latency": 1  // cycles
    },
    "external_channel": {
      "latency": 1  // cycles
    },
    "channel_log": {
      "file": "/dev/null"  // "channels.csv"
    },
    "router": {
      "architecture": "input_queued",
      "congestion_status": {
        "algorithm": "buffer_occupancy",
        "latency": 1,
        "granularity": 0,
        "mode": "normalized_port" //(normalized_port/vc absolute_port/vc)
      },
      "input_queue_depth": 16,
      "vca_swa_wait": true,
      "output_queue_depth": 128,
      "crossbar": {
        "latency": 1  // cycles
      },
      "vc_scheduler": {
        "allocator": {
          "type": "rc_separable",
          "slip_latch": true,
          "iterations": 3,
          "resource_arbiter": {
            "type": "lslp"
          },
          "client_arbiter": {
            "type": "lslp"
          }
        }
      },
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "lslp"
          }
        },
        "full_packet": false,
        "packet_lock": true,
        "idle_unlock": true
      }
    },
    "interface": {
      "type": "standard",
      "adaptive": false,
      "fixed_msg_vc": false,
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "lslp"
          }
        },
        "full_packet": false,
        "packet_lock": true,
        "idle_unlock": true
      },
      "init_credits": "$&(network.router.input_queue_depth)&$",
      "crossbar": {
        "latency": 1  // cycles
      }
    }
  },
  "metadata_handler": {
    "type": "zero"
  },
  "workload": {
    "message_log": {
      "file": "/dev/null"  // "data.mpf.gz"
    },
    "applications": [
      {
        "type": "simple_mem",
        "memory_slice": 4096,
        "block_size": 64,  // bytes
        "bytes_per_flit": 4,
        "header_overhead": 16,  // bytes
        "max_packet_size": 16,  // flits
        "processor_terminal": {
          "traffic_class": 1,
          "latency": 10,
          "memory_accesses": 20
        },
        "memory_terminal": {
          "traffic_class": 0,
          "latency": 15
        },
        "rate_log": {
          "file": "/dev/null"  // "rates.csv"
        }
      },
      {
        "type": "stream",
        "stream_terminal": {
          "injection_rate": 1.0,
          "traffic_class": 1,
          "num_messages": 0,
          "max_packet_size": 1,
          "message_size_distribution": {
            "type": "single",
            "message_size": 1
          }
        },
        "rate_log": {
          "file": "/dev/null"  // "rates.csv"
        },
        "source_terminal": -1,  // < 0 is random
        "destination_terminal": -1  // < 0 is random
      }
    ]
  },
  "debug": []
}
